{
  "name": "semantic-release-yarn",
  "description": "semantic-release plugin to publish a npm package with yarn",
  "version": "0.0.0",
  "author": "Joram van den Boezem <joram@vandenboezem.nl>",
  "contributors": [
    "Pierre Vanduynslager (https://twitter.com/@pvdlg_)",
    "Stephan BÃ¶nnemann <stephan@boennemann.me> (http://boennemann.me)",
    "Gregor Martynus (https://twitter.com/gr2m)"
  ],
  "homepage": "https://github.com/hongaar/semantic-release-yarn",
  "repository": "github:hongaar/semantic-release-yarn",
  "bugs": "https://github.com/hongaar/semantic-release-yarn/issues",
  "keywords": [
    "npm",
    "publish",
    "semantic-release",
    "yarn",
    "monorepo"
  ],
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "postinstall": "husky install",
    "format": "prettier --write --ignore-unknown .",
    "format:check": "prettier --check --ignore-unknown .",
    "clean": "rm -rf dist && rm -rf types",
    "build": "yarn clean && tsc",
    "build:watch": "yarn build && tsc --watch",
    "prepublish": "yarn build",
    "release": "semantic-release",
    "_comment": "remove ðŸ‘‡ these lines",
    "test": "nyc ava -v",
    "pretest": "npm run lint",
    "codecov": "codecov -f coverage/coverage-final.json"
  },
  "engines": {
    "node": ">=16 || ^14.17"
  },
  "dependencies": {
    "@semantic-release/error": "^3.0.0",
    "aggregate-error": "^3.0.0",
    "execa": "^5.0.0",
    "fs-extra": "^10.0.0",
    "lodash": "^4.17.15",
    "nerf-dart": "^1.0.0",
    "normalize-url": "^8.0.0",
    "npm": "^8.3.0",
    "rc": "^1.2.8",
    "read-pkg": "^5.0.0",
    "registry-auth-token": "^5.0.1",
    "semver": "^7.1.2",
    "tempy": "^1.0.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/git": "10.0.1",
    "@types/env-ci": "3.1.1",
    "@types/fs-extra": "9.0.13",
    "@types/lodash": "4.14.190",
    "@types/node": "18.11.9",
    "@types/prettier": "2",
    "@types/rc": "1.2.1",
    "@types/registry-auth-token": "4.2.1",
    "@types/semantic-release": "17.2.4",
    "@types/semver": "7.3.13",
    "ava": "4.2.0",
    "codecov": "3.8.3",
    "delay": "5.0.0",
    "dockerode": "3.3.4",
    "get-stream": "6.0.1",
    "got": "11.8.5",
    "husky": "8.0.2",
    "lint-staged": "13.0.4",
    "moker": "0.4.4",
    "nyc": "15.1.0",
    "p-retry": "4.6.2",
    "prettier": "2.8.0",
    "semantic-release": "19.0.5",
    "sinon": "14.0.0",
    "stream-buffers": "3.0.2",
    "tmp": "^0.2.1",
    "typescript": "4.9.3"
  },
  "peerDependencies": {
    "semantic-release": ">=19.0.0"
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "timeout": "2m",
    "workerThreads": false
  },
  "nyc": {
    "include": [
      "lib/**/*.js",
      "index.js"
    ],
    "reporter": [
      "json",
      "text",
      "html"
    ],
    "all": true
  },
  "packageManager": "yarn@3.3.0",
  "moker": {
    "plugins": [
      "typescript",
      "github-actions",
      "semantic-release",
      "prettier",
      "lint-staged",
      "husky",
      "dependabot"
    ]
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown"
  }
}
