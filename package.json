{
  "name": "semantic-release-yarn",
  "description": "semantic-release plugin to publish a npm package with yarn",
  "version": "0.3.1",
  "license": "MIT",
  "author": "Joram van den Boezem <joram@vandenboezem.nl> (https://joram.dev)",
  "contributors": [
    "Pierre Vanduynslager (https://twitter.com/@pvdlg_)",
    "Stephan BÃ¶nnemann <stephan@boennemann.me> (http://boennemann.me)",
    "Gregor Martynus (https://twitter.com/gr2m)"
  ],
  "homepage": "https://github.com/hongaar/semantic-release-yarn",
  "repository": "github:hongaar/semantic-release-yarn",
  "bugs": "https://github.com/hongaar/semantic-release-yarn/issues",
  "keywords": [
    "npm",
    "publish",
    "semantic-release",
    "yarn",
    "monorepo"
  ],
  "type": "module",
  "main": "dist/cjs/index.cjs",
  "types": "dist/types/index.d.ts",
  "exports": {
    "types": "./dist/types/index.d.ts",
    "import": "./dist/esm/index.js",
    "require": "./dist/cjs/index.cjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "format": "prettier --write --ignore-unknown .",
    "format:check": "prettier --check --ignore-unknown .",
    "clean": "rm -rf dist",
    "build": "yarn clean && yarn build:cjs && yarn build:esm",
    "build:cjs": "tsc --module commonjs --moduleResolution nodenext --outDir dist/cjs && yarn convert-extension cjs dist/cjs/ && rm dist/cjs/*.map",
    "build:esm": "tsc --outDir dist/esm",
    "test": "ava",
    "doctoc": "doctoc README.md",
    "prepublish": "yarn build",
    "release": "semantic-release"
  },
  "engines": {
    "node": ">=16 || ^14.17"
  },
  "dependencies": {
    "@semantic-release/error": "^3.0.0",
    "aggregate-error": "^4.0.1",
    "cosmiconfig": "^8.0.0",
    "execa": "^6.1.0",
    "fs-extra": "^11.1.0",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "nerf-dart": "^1.0.0",
    "read-pkg": "^7.1.0",
    "semver": "^7.3.8"
  },
  "devDependencies": {
    "@semantic-release/changelog": "6.0.2",
    "@semantic-release/git": "10.0.1",
    "@types/dockerode": "3.3.14",
    "@types/env-ci": "3.1.1",
    "@types/fs-extra": "11.0.1",
    "@types/js-yaml": "4.0.5",
    "@types/lodash": "4.14.191",
    "@types/node": "18.11.18",
    "@types/prettier": "2.7.2",
    "@types/semantic-release": "20.0.0",
    "@types/semver": "7.3.13",
    "@types/sinon": "10.0.13",
    "@types/stream-buffers": "3.0.4",
    "ava": "5.1.1",
    "convert-extension": "0.3.0",
    "dockerode": "3.3.4",
    "doctoc": "2.2.1",
    "get-stream": "6.0.1",
    "got": "12.5.3",
    "husky": "8.0.3",
    "lint-staged": "13.1.0",
    "moker": "0.10.3",
    "p-retry": "5.1.2",
    "prettier": "2.8.3",
    "semantic-release": "20.1.0",
    "sinon": "15.0.1",
    "stream-buffers": "3.0.2",
    "tempy": "3.0.0",
    "ts-node": "10.9.1",
    "typescript": "4.9.5"
  },
  "peerDependencies": {
    "semantic-release": ">=19.0.0"
  },
  "nyc": {
    "include": [
      "lib/**/*.js",
      "index.js"
    ],
    "reporter": [
      "json",
      "text",
      "html"
    ],
    "all": true
  },
  "packageManager": "yarn@3.3.0",
  "moker": {
    "plugins": [
      "typescript",
      "github-actions",
      "semantic-release",
      "prettier",
      "lint-staged",
      "husky",
      "dependabot",
      "doctoc"
    ]
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown"
  }
}
