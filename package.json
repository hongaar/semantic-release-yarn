{
  "name": "semantic-release-yarn",
  "description": "semantic-release plugin to publish a npm package with yarn",
  "version": "0.0.0",
  "author": "Joram van den Boezem <joram@vandenboezem.nl>",
  "contributors": [
    "Pierre Vanduynslager (https://twitter.com/@pvdlg_)",
    "Stephan BÃ¶nnemann <stephan@boennemann.me> (http://boennemann.me)",
    "Gregor Martynus (https://twitter.com/gr2m)"
  ],
  "homepage": "https://github.com/hongaar/semantic-release-yarn",
  "repository": "github:hongaar/semantic-release-yarn",
  "bugs": "https://github.com/hongaar/semantic-release-yarn/issues",
  "keywords": [
    "npm",
    "publish",
    "semantic-release",
    "yarn",
    "monorepo"
  ],
  "license": "MIT",
  "main": "index.js",
  "types": "types/index.d.ts",
  "files": [
    "lib",
    "dist",
    "types"
  ],
  "scripts": {
    "codecov": "codecov -f coverage/coverage-final.json",
    "lint": "xo",
    "pretest": "npm run lint",
    "clean": "rm -rf dist && rm -rf types",
    "build": "yarn clean && tsc",
    "watch:build": "tsc --watch",
    "test": "nyc ava -v",
    "prepublish": "yarn build",
    "release": "semantic-release"
  },
  "engines": {
    "node": ">=16 || ^14.17"
  },
  "dependencies": {
    "@semantic-release/error": "^3.0.0",
    "aggregate-error": "^3.0.0",
    "execa": "^5.0.0",
    "fs-extra": "^10.0.0",
    "lodash": "^4.17.15",
    "nerf-dart": "^1.0.0",
    "normalize-url": "^6.0.0",
    "npm": "^8.3.0",
    "rc": "^1.2.8",
    "read-pkg": "^5.0.0",
    "registry-auth-token": "^4.0.0",
    "semver": "^7.1.2",
    "tempy": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "18.11.9",
    "ava": "4.2.0",
    "clear-module": "4.1.2",
    "codecov": "3.8.3",
    "delay": "5.0.0",
    "dockerode": "3.3.1",
    "get-stream": "6.0.1",
    "got": "11.8.5",
    "moker": "^0.4.4",
    "nyc": "15.1.0",
    "p-retry": "4.6.2",
    "semantic-release": "19.0.2",
    "sinon": "14.0.0",
    "stream-buffers": "3.0.2",
    "typescript": "4.9.3",
    "xo": "0.36.1"
  },
  "peerDependencies": {
    "semantic-release": ">=19.0.0"
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "timeout": "2m",
    "workerThreads": false
  },
  "nyc": {
    "include": [
      "lib/**/*.js",
      "index.js"
    ],
    "reporter": [
      "json",
      "text",
      "html"
    ],
    "all": true
  },
  "xo": {
    "prettier": true,
    "space": true,
    "rules": {
      "unicorn/string-content": "off",
      "unicorn/no-reduce": "off"
    }
  },
  "packageManager": "yarn@3.3.0",
  "moker": {
    "plugins": [
      "typescript"
    ]
  }
}
